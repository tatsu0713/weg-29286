<div class="total-user-page">
  <div class="user-show">
    <div class='user-boxes'>
        <div class="user-sub-box">
            <h2 class="name-side">
              <%= @nickname %>
            <h2>
        </div>
      </div>
    </div>
  </div>

  <%= render "shared/footer" %>


  <div class="user-show-bottom">
    <div class='tweet-boxes'>
        <div class="favorite-list">
          <h2 class="name-bottom">
            Favorite Car
          <h2>
          <h2 class="name-sub-bottom">
            -- <%= @user %> --
          </h2>
        </div>
        <div class="user-post">
          <h2 class="user-bottom-post">
            Post List
          </h2>
          <ul class='item-lists'>
          <% @tweets.each do |tweet| %>
            <li class='list'>
              <%= link_to tweet_path(tweet.id) do %>
              <div class='item-img-content'>
                <%= image_tag tweet.image, class: "item-img" %>
              </div>
              <div class='item-info'>
                <h3 class='item-name'>
                  <%= tweet.title %>
                </h3>
                <div class='item-price'>
                  <%# <span><%= "販売価格" %>
                  <div class='star-btn'>
                  </div>
                </div>
              </div>
              <% end %>
            </li>
          <% end %>
          </ul>
        </div>
    </div>
  </div>
</div>
